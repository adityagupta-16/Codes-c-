#include <iostream>
using namespace std;

int main() {
	// your code goes here
	int t;
	cin>>t;
	while(t--)
	{
	    int n;
	    cin>>n;
	    char c[n];
	    int zero=0,one=0;
	    for(int i=0;i<n;i++)
	       {
	           cin>>c[i];
	           if(c[i]=='0')
	            zero+=1;
	            else
	            one+=1;
	       }
	      
	        if(zero==one)
	        cout<<2*min(zero,one)<<endl;
	        else
	            cout<<2*min(zero,one)+1<<endl;
	       
	    
	    
	}
	return 0;
}
