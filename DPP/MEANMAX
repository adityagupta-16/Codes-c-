#include <bits/stdc++.h>
using namespace std;

int main() {
	// your code goes here
	int t;
	cin>>t;
	while(t--)
	{
	    int n; 
    cin>>n;
   int val=0; 
   float sum=0;
  int x; 
  for(int i=0;i<n;i++)
  {
   cin>>x; 
   val=max(x,val);
   sum+=(float)x;
  }
   
  sum-=val; 
  
  float ans=((sum)/(n-1))+(float)val;
  
  cout<<fixed<<setprecision(6)<<ans<<endl;
	}
	return 0;
}
