#include<bits/stdc++.h>
using namespace std;

int main()
{
	int t;
	cin>>t;									
	while(t--)
	{
		int count=0;
		int n;
		cin>>n;
		int arr[n];
		for(int i=0;i<n;i++)
			cin>>arr[i];
				
		if(n>1)
		{
		for(int i=0;i<n;i++)
		{
			if(arr[i]%2!=0)
				count+=1;
		}
	
	if(count%2==0)
			cout<<count/2<<endl;
	else 
		cout<<(count-1)/2<<endl;
}
else
	cout<<0<<endl;
	
	}
}
