#include<bits/stdc++.h>
using namespace std;


															/* find the minimum connection of wire to turn all the bulb onn(ateast one bulb will be onn) n=no. of switches, m=no. of bulb;
                        											        test case:1
															n=8: 0 1  0  0  1  1  0  0
															m=8:  3 5  10 12 13 23 30 38
															O/p-> 20
															test case :2
															n=7: 1 0 1 1 0 1 1
															m=7: 1 2 3 5 8 9 11
															o/p->2 
															*/
int main()
{
	int n,m,count=0;
	cin>>n;															
	int arr[n];					
					   	 
	for(int i=0;i<n;i++)
								
		cin>>arr[i];								
	cin>>m;
	int brr[m];
	for(int i=0;i<m;i++)
		cin>>brr[i];
	for(int i=0;i<m;i++)
	{
		int a=abs(brr[i]-brr[i-1]);
		int b=abs(brr[i+1]-brr[i]);
		if(arr[i]==0)
		{	
			if(i<(m-1))
			{			
				if(a<b)
					{
					count+=a;
					arr[i]=1;
					}
				else
					{
					count+=b;
					arr[i]=1;
					}	
			}
			else
			{
					count+=a;
					arr[i]=1;
					}
		}
	}
	cout<<count;
}
